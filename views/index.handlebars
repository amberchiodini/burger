<div class="container">
  <div class="row" id="row1">
    <div class="col-md-12">
      <h1 class="mainTitle">Eat Da Burger!</h1>
        <iframe src="https://gifer.com/embed/UtFj" width=300 height=300 frameBorder="0" allowFullScreen></iframe><p><a href="https://gifer.com"></a></p>
    </div>
  </div>

  <div class="row" id="row2">
    <div class="col-md-8">
      <h2 class="title">Current Orders</h2>
        <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{burger_name}}
            {{> burgers/burger-block}}
          {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-md-4">
      <h2 class="prevTitle">Previous Orders</h2>
      <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
          {{id}}
          {{burger_name}}
          </li>
        {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>

  <div class="row" id="row3">
    <div class="col-md-12">
      <div class="orderBurger">
        <h2 class="title">New Order</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="text" id="newBurger" name="burger">
          </div>
        <button type="submit" id="orderBtn">Order!</button>
        </form>
      </div>
    </div>
  </div>
</div>